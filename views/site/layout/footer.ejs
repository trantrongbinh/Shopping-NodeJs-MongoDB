$(document).ready(function() {
    menu();

    $('.updateCart').click(function() {
        var id = $(this).attr('id');
        var soluong = parseInt($('#' + id).val());
        if (soluong > 0) {
            $.post(
                '/updateCart', {
                    id: id,
                    soluong: soluong
                },
                function(data) {

                    if (data.st == 1) location.href = "gio-hang.html";
                }
            ), 'json';
        }
    });

    $('.delCart').click(function() {
        var id = $(this).attr('id');

        $.post(
            '/delCart', {
                id: id
            },
            function(data) {

                if (data.st == 1) location.href = "gio-hang.html";
            }
        ), 'json';

    });

    $(window).scroll(function() {
        if ($(this).scrollTop() > 100) {
            $('#goTop').fadeIn();
        } else {
            $('#goTop').fadeOut();
        }
    });
    $('#goTop').click(function() {
        $("html, body").animate({ scrollTop: 0 }, 600);
        return false;
    });
});

function menu() {
    $.post(
        '/menu', {

        },
        function(data) {
            var classMenu = '';
            var hash = location.pathname;

            if (hash == '/') var menu = '<li><a class="active" href="/" >Home</a></li>';
            else var menu = '<li><a  href="/">Home</a></li>';

            data.forEach(function(item) {
                var urlMenu = '/cate/' + item.nameKhongDau + '.' + item._id + '.html/page=1';
                var pathName = location.pathname;
                pathName = pathName.split('.')[1];
                menu += '<li><a  href="' + urlMenu + '" ';
                if (urlMenu == hash || item._id == pathName) menu += 'class="active"';
                menu += '>' + item.name + '</a></li>';
            });
            $('#categorymenu ul.categorymenu').html(menu);


        }
    );
}
