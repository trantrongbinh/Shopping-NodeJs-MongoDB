<% include ../layout/header.ejs %>
    <!-- Header End -->
    <div id="maincontainer">
        <section id="product">
            <div class="container">
                <!-- Product Details-->
                <div class="row">
                    <!-- Left Image-->
                    <div class="span5 basic-sample">
                        <ul class="thumbnails mainimage">
                            <li class="span5" style="width: 350px;">
                                <a rel="position: 'inside' , showTitle: false, adjustX:-4, adjustY:-4" class="thumbnail cloud-zoom" href="/upload/<%= data.img%>">
                <img src="/upload/<%= data.img%>" alt="" title="">
              </a>
                            </li>
                        </ul>
                    </div>
                    <!-- Right Details-->
                    <div class="span7">
                        <div class="row">
                            <div class="span7">
                                <h1 class="productname"><span class="bgnone"><%= data.name%></span></h1>
                                <div class="productprice">
                                    <div class="productpageprice">
                                        <span class="spiral"></span>
                                        <%= data.price%>
                                    </div>
                                </div>
                                <ul class="productpagecart">
                                    <li><a class="cart" href="/add-cart.<%= data._id %>">Add to Cart</a>
                                    </li>
                                </ul>
                                <!-- Product Description tab & comments-->
                                <div class="productdesc">
                                    <ul class="nav nav-tabs" id="myTab">
                                        <li class="active"><a href="#description">Description</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="description">
                                            <h2>Chi Tiết Sản Phẩm</h2>
                                            <%= data.des%>
                                        </div>
                                    </div>
                                    <div style="margin-top: 30px; background: #f7f7f7; padding: 5px;">
                                    <div class="fb-comments" data-href="https://developers.facebook.com/docs/plugins/comments#bkfa-news#chitietsanpham<%=data._id%>" data-width="670" data-numposts="5"></div>
                                    <div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--  Related Products-->
        <section id="related" class="row">
            <div class="container">
                <h1 class="heading1"><span class="maintext">Sản Phẩm Khác</span><span class="subtext"> See Our Most featured Products</span></h1>
                <ul class="thumbnails">
                    <% product.forEach(function(pro){ %>
                        <li class="span3">
                            <a class="prdocutname" href="product.html">
                                <%= pro.name %>
                            </a>
                            <div class="thumbnail">
                                <span class="sale tooltip-test">Sale</span>
                                <a href="/chi-tiet/<%= pro.nameKhongDau%>.<%= pro._id%>.<%= pro.cateId%>.html"><img alt="" src="/upload/<%= pro.img %>"></a>
                                <div class="pricetag">
                                    <span class="spiral"></span><a href="/add-cart.<%= pro._id %>" class="productcart">ADD TO CART</a>
                                    <div class="price">
                                        <div class="pricenew">
                                            <%= pro.price %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <% })%>
                </ul>
            </div>
        </section>
        <!-- Popular Brands-->
    </div>
    <!-- Footer -->
    <% include ../layout/footer.ejs %>